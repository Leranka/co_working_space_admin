<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.mlab.hackaton_admin11.MainActivity">

    <EditText
        android:id="@+id/EdtPlaceName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="place name" />

    <EditText
        android:id="@+id/EdtPlaceInfor"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="place information" />

    <EditText
        android:id="@+id/EdtAddress"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Address" />


    <EditText
        android:id="@+id/EdtCell"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Cell" />


    <EditText
        android:id="@+id/edtWorkingHours"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Working hours" />

    <EditText
        android:id="@+id/EdtWebsite"
        android:layout_width="match_parent"
        android:inputType="number"
        android:layout_height="wrap_content"
        android:hint="Website" />

    <EditText
        android:id="@+id/edtLongitude"
        android:layout_width="match_parent"
        android:inputType="numberDecimal|numberSigned"
        android:layout_height="wrap_content"
        android:hint="Longitude" />


    <EditText
        android:id="@+id/edtLatitude"
        android:layout_width="match_parent"
        android:inputType="numberDecimal|numberSigned"
        android:layout_height="wrap_content"
        android:hint="Latitude" />


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/ImageView"
            android:layout_width="0dp"
            android:layout_height="0dp" />

        <Button
            android:id="@+id/btnUploadPic"
            android:layout_width="match_parent"
            android:onClick="btnBrowe_Click"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:text="upload pic" />

        <Button
            android:id="@+id/btnSave"
            android:layout_width="match_parent"
            android:onClick="btnUpload_Click"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:text="save" />

        <Button
            android:id="@+id/btnViewDB"
            android:layout_width="match_parent"
            android:onClick="ViewDatabase"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:text="View the database" />

        </LinearLayout>
    </ScrollView>









</LinearLayout>
